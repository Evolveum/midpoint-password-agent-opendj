  <adm:property name="attribute-type" multi-valued="true">
    <adm:synopsis>
      Specifies the attribute types that this plug-in will send along with
      the password change.
    </adm:synopsis>
    <adm:description>
      Zero or more attribute type can be specified.
    </adm:description>
    <adm:default-behavior>
      <adm:alias>
        <adm:synopsis>
          If no attribute types are specified, only the DN and the new
          password of the user will be synchronized to OpenIDM.
        </adm:synopsis>
      </adm:alias>
    </adm:default-behavior>
    <adm:syntax>
      <adm:attribute-type />
    </adm:syntax>
    <adm:profile name="ldap">
      <ldap:attribute>
        <ldap:name>ds-cfg-attribute-type</ldap:name>
      </ldap:attribute>
    </adm:profile>
  </adm:property>
  <adm:property name="midpoint-url"
    mandatory="true">
    <adm:synopsis>
      Specifies the location of the service WSDL file.
    </adm:synopsis>
    <adm:description>
      The WSDL location of the PasswordSyncService.
    </adm:description>
    <adm:default-behavior>
      <adm:defined>
        <adm:value>http://localhost:8080/midpoint/model/model-1</adm:value>
      </adm:defined>
    </adm:default-behavior>
    <adm:syntax>
      <adm:string>
        <adm:pattern>
          <!--adm:regex>(http|https)://(w+:{0,1}w*@)?(S+)(:[0-9]+)?(/|/([w#!:.?+=&amp;%@!-/]))?</adm:regex-->
          <adm:regex>.*</adm:regex>
          <adm:usage>STRING</adm:usage>
          <adm:synopsis>
            MidPoint Web Service URL
          </adm:synopsis>
        </adm:pattern>
      </adm:string>
    </adm:syntax>
    <adm:profile name="ldap">
      <ldap:attribute>
        <ldap:name>
          ds-cfg-referrals-url
        </ldap:name>
      </ldap:attribute>
    </adm:profile>
  </adm:property>
  <adm:property name="username"
    mandatory="true">
    <adm:synopsis>
      The username to authenticate to midPoint using
    </adm:synopsis>
    <adm:description>
      Username to connect to provisioning engine
    </adm:description>
    <adm:default-behavior>
      <adm:defined>
        <adm:value>administrator</adm:value>
      </adm:defined>
    </adm:default-behavior>
    <adm:syntax>
      <adm:string>
        <adm:pattern>
          <!--adm:regex>(http|https)://(w+:{0,1}w*@)?(S+)(:[0-9]+)?(/|/([w#!:.?+=&amp;%@!-/]))?</adm:regex-->
          <adm:regex>.*</adm:regex>
          <adm:usage>STRING</adm:usage>
          <adm:synopsis>
            midPoint username
          </adm:synopsis>
        </adm:pattern>
      </adm:string>
    </adm:syntax>
    <adm:profile name="ldap">
      <ldap:attribute>
        <ldap:name>
          ds-cfg-midpoint-username
        </ldap:name>
      </ldap:attribute>
    </adm:profile>
  </adm:property>
  <adm:property name="password"
    mandatory="true">
    <adm:synopsis>
      The password to authenticate to midPoint using
    </adm:synopsis>
    <adm:description>
      Password to connect to provisioning engine
    </adm:description>
    <adm:default-behavior>
      <adm:defined>
        <adm:value>5ecr3t</adm:value>
      </adm:defined>
    </adm:default-behavior>
    <adm:syntax>
      <adm:string>
        <adm:pattern>
          <!--adm:regex>(http|https)://(w+:{0,1}w*@)?(S+)(:[0-9]+)?(/|/([w#!:.?+=&amp;%@!-/]))?</adm:regex-->
          <adm:regex>.*</adm:regex>
          <adm:usage>STRING</adm:usage>
          <adm:synopsis>
            midPoint password
          </adm:synopsis>
        </adm:pattern>
      </adm:string>
    </adm:syntax>
    <adm:profile name="ldap">
      <ldap:attribute>
        <ldap:name>
          ds-cfg-midpoint-password
        </ldap:name>
      </ldap:attribute>
    </adm:profile>
  </adm:property>
  <adm:property name="password-cache-dir"
    mandatory="true">
    <adm:synopsis>
      The directory to cache password changes to
    </adm:synopsis>
    <adm:description>
      Local dir for password cache
    </adm:description>
    <adm:default-behavior>
      <adm:defined>
        <adm:value>/opt/midpoint/opendj-pwdfilter</adm:value>
      </adm:defined>
    </adm:default-behavior>
    <adm:syntax>
      <adm:string>
        <adm:pattern>
          <!--adm:regex>(http|https)://(w+:{0,1}w*@)?(S+)(:[0-9]+)?(/|/([w#!:.?+=&amp;%@!-/]))?</adm:regex-->
          <adm:regex>.*</adm:regex>
          <adm:usage>STRING</adm:usage>
          <adm:synopsis>
            midPoint password
          </adm:synopsis>
        </adm:pattern>
      </adm:string>
    </adm:syntax>
    <adm:profile name="ldap">
      <ldap:attribute>
        <ldap:name>
          ds-cfg-midpoint-passwordcachedir
        </ldap:name>
      </ldap:attribute>
    </adm:profile>
  </adm:property>
  <adm:property name="encryption-key-alias"
    mandatory="true">
    <adm:synopsis>
      The alias of the encryption key to use
    </adm:synopsis>
    <adm:description>
      The alias of the encryption key to use
    </adm:description>
    <adm:default-behavior>
      <adm:defined>
        <adm:value>strong</adm:value>
      </adm:defined>
    </adm:default-behavior>
    <adm:syntax>
      <adm:string>
        <adm:pattern>
          <!--adm:regex>(http|https)://(w+:{0,1}w*@)?(S+)(:[0-9]+)?(/|/([w#!:.?+=&amp;%@!-/]))?</adm:regex-->
          <adm:regex>.*</adm:regex>
          <adm:usage>STRING</adm:usage>
          <adm:synopsis>
            midPoint password
          </adm:synopsis>
        </adm:pattern>
      </adm:string>
    </adm:syntax>
    <adm:profile name="ldap">
      <ldap:attribute>
        <ldap:name>
          ds-cfg-midpoint-encryptionkeyalias
        </ldap:name>
      </ldap:attribute>
    </adm:profile>
  </adm:property>
</adm:managed-object>
